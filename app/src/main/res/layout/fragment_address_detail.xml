<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:background="@color/color_background">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,3,5"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    />

                <EditText
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_column="1"
                    android:layout_span="5"
                    android:textSize="20dp"
                    android:inputType="textPersonName|textCapWords"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:imeOptions="actionNext"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:layout_marginRight="10dp"
                    android:gravity="right"

                    />

                <EditText
                    android:id="@+id/text_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_column="1"
                    android:layout_span="5"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연락처"
                    android:layout_marginRight="10dp"
                    android:gravity="right"

                    />

                <EditText
                    android:id="@+id/text_user_contact1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:imeOptions="actionNext"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text=" - "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:focusable="false"
                    />

                <EditText
                    android:id="@+id/text_user_contact2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:imeOptions="actionNext"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text=" - "
                    android:textSize="20dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/text_user_contact3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:imeOptions="actionNext"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    android:gravity="center"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    />

                <EditText
                    android:id="@+id/text_user_email1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_column="1"
                    android:layout_span="5"
                    android:textSize="20dp"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="배송 시\n요청 사항"
                    android:lines="2"
                    android:gravity="right"
                    android:layout_gravity="fill"
                    />

                <EditText
                    android:id="@+id/text_user_note"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_column="1"
                    android:layout_span="5"
                    android:textSize="20dp"
                    android:inputType="textShortMessage"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/btn_sqr_gry_brdr_drkgry"
                    />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_order_address_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="확인"
                    android:layout_span="2"
                    />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/table_layout_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_address_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="저장하기"
                    android:layout_span="2"
                    />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_address_remove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="지우기"
                    />

                <Button
                    android:id="@+id/btn_address_default"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="자주쓰는 주소 설정"
                    />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="자주쓰는 주소는 최대 5개까지 등혹하실 수 있습니다."
                    android:textSize="13dp"
                    />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>