<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_rvw_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/btn_rct_lhtgry"
        />


    <TableLayout
        android:id="@+id/tl_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tv_avg_rating"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="80sp"
                android:textColor="@android:color/black"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:id="@+id/tr_rating_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5점"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            />

                        <ProgressBar
                            android:id="@+id/pb_rating_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:indeterminate="false"
                            style="?android:attr/progressBarStyleHorizontal"
                            />

                        <TextView
                            android:id="@+id/tv_rating_5_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            />

                    </TableRow>


                    <TableRow
                        android:id="@+id/tr_rating_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4점"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            />

                        <ProgressBar
                            android:id="@+id/pb_rating_4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            />

                        <TextView
                            android:id="@+id/tv_rating_4_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_rating_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3점"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            />

                        <ProgressBar
                            android:id="@+id/pb_rating_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            />

                        <TextView
                            android:id="@+id/tv_rating_3_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_rating_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2점"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            />

                        <ProgressBar
                            android:id="@+id/pb_rating_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            />

                        <TextView
                            android:id="@+id/tv_rating_2_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_rating_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1점"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            />

                        <ProgressBar
                            android:id="@+id/pb_rating_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            />

                        <TextView
                            android:id="@+id/tv_rating_1_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </TableRow>

    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_detail_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tv_rvw_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#8F7859"
        android:gravity="center"
        />

</LinearLayout>