<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="false"
        >

        <LinearLayout
            android:id="@+id/layout_delivery_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rct_wht_dot_blck">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="3"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/image_view_address"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/kombu_tae"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowSpan="3"
                    android:layout_columnSpan="2"
                    />

                <TextView
                    android:id="@+id/text_user_collect_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="유기농 쿰부차 6병"
                    android:textSize="20dp"
                    android:textColor="@color/colorText"
                    android:gravity="center_vertical"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnSpan="3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="환경보호 분담 정립금 : "
                    android:textSize="15dp"
                    android:textColor="@color/colorText"
                    android:gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnSpan="1"
                    />

                <TextView
                    android:id="@+id/text_user_collect_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="원"
                    android:textSize="15dp"
                    android:textColor="@color/colorText"
                    android:gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_columnSpan="1"
                    />

                <TextView
                    android:id="@+id/text_user_collect_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="배송상태"
                    android:textSize="15dp"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnSpan="3"
                    />

                <Button
                    android:id="@+id/button_user_collect_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnSpan="3"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:text="수거 요청하기"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />

            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>